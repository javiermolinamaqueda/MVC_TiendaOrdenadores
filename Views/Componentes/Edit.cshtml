                <label asp-for="TipoComponente" class="control-label"></label>
                <select asp-for="TipoComponente" class="form-control" asp-items="ViewBag.TipoComponente">
                    @foreach (var item in Enum.GetValues(typeof(TipoComponente)))
                    {
                        <option value="@Convert.ToInt32(item)">@item</option>
                    }
                </select>


            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
