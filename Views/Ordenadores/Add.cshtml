@model MVC_ComponenteCodeFirst.Models.Componente

@{
    ViewData["Title"] = "Add";
}

<h1>Add Componente</h1>

<h4>Ordenador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Componentes" asp-action="EditOrdenadorId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Add Componente</label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.ComponenteId"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <input type="hidden" name="OrdenadorId" value="@ViewData["OrdenadorId"]" />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
