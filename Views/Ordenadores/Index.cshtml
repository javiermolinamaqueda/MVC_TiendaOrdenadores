@model IEnumerable<MVC_ComponenteCodeFirst.Models.Ordenador>

@{
    ViewData["Title"] = "Index";
}

<h1>Ordenadores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                Componentes
            </th>
            <th>
                
            </th>
            <th>
                Estado
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>@item.Precio</td>
            <td>
                @*@await Component.InvokeAsync("DescripcionComponentes", new{lista =item.Componentes})*@
                    @foreach (var item1 in item.Componentes)
                    {
                        @item1.Descripcion
                        if (item.PedidoId == null)
                        {
                           <a class="link-danger" asp-controller="Componentes" asp-action="EditOrdenadorId" asp-route-id="@item1.Id" > X </a>
                        }
                        <br/>
                    }
 
              
                <td>
                    @if (item.PedidoId == null)
                    {
                        <p><a asp-controller="Componentes" asp-action="CreateByOrdenador" asp-route-OrdenadorId="@item.Id">Add New Componente</a></p>
                        <p><a asp-controller="Ordenadores" asp-action="Add" asp-route-id="@item.Id">Add Componente Existente</a></p>
                    }
                </td>
                <td>
                        @if (item.PedidoId == null)
                        {
                        
                            <p>Disponible</p>
                        }
                        else
                        {
                            <p>Agotado</p>
                        }
                
            </td>
            <td>
                        @if (item.PedidoId == null)
                        {
                        <a asp-action="Edit" asp-route-id="@item.Id">
